{
  "lexicon": 1,
  "id": "network.sporechain.entry",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["subject", "cid", "createdAt"],
        "properties": {
          "subject": {
            "type": "string",
            "description": "Scientific name",
            "maxLength": 512
          },
          "cid": {
            "type": "string",
            "description": "IPFS CID of content",
            "maxLength": 128
          },
          "previous": {
            "type": "string",
            "description": "Previous entry or 'genesis'",
            "maxLength": 256
          },
          "tags": {
            "type": "array",
            "description": "Searchable tags",
            "items": {
              "type": "string",
              "maxLength": 100
            },
            "maxLength": 20
          },
          "createdAt": {
            "type": "string",
            "format": "datetime"
          }
        }
      }
    }
  }
}
